<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/relativeLayout1"
	android:orientation="vertical" >

	<ProgressBar
		android:id="@+id/progressbar_downloading"
		style="?android:attr/progressBarStyle"
		android:progressTint="@color/colorPrimary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true">
	</ProgressBar>

<LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/LinearLayout2"
		android:background="@color/colorPrimary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="10" >

	<TextView
		android:id="@+id/carTitleTextView"
		android:textSize="@dimen/basic_button_font_size"
		android:textColor="@color/white"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="9"
		android:ems="10"
		android:text="Opel"
		android:padding="@dimen/padding_medium" />

		<CheckBox
			android:id="@+id/isFavoritedCheckBox"
			style="?android:attr/starStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/padding_small"
			android:layout_weight="1" />
	</LinearLayout>

	<ScrollView
		android:id="@+id/carInfoScrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<LinearLayout
			android:id="@+id/LinearLayout3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent" >

			<android.support.v4.view.ViewPager
				android:id="@+id/viewpager"
				android:layout_width="wrap_content"
				android:layout_height="300dp" />

				<TextView
					android:id="@+id/pageDisplayTextView"
					android:layout_width="60dp"
					android:layout_height="35dp"
					android:textColor="@color/white"
					android:textStyle="bold"
					android:gravity="center"
					android:background="@color/light_grey_transparent"
					android:layout_marginTop="@dimen/padding_large"
					android:layout_marginRight="@dimen/padding_large"
					android:layout_alignParentRight="true" />

			</RelativeLayout>

			<TextView
				android:id="@+id/detailedTitleTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="@dimen/padding_medium"
				android:textSize="@dimen/medium_font_size"
				android:text="detailed title"
				android:paddingLeft="@dimen/padding_large" />

			<TextView
				android:id="@+id/carPriceTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/large_font_size"
				android:textColor="@color/black"
				android:textStyle="bold"
				android:paddingBottom="@dimen/padding_medium"
				android:paddingLeft="@dimen/padding_large"
				android:text="149 000,-" />

			<TextView
				android:id="@+id/carAboutTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/medium_font_size"
				android:textColor="@color/black"
				android:textStyle="bold"
				android:paddingBottom="@dimen/padding_small"
				android:paddingLeft="@dimen/padding_large"
				android:text="@string/about_car_text_view" />

			<TableLayout
				android:id="@+id/specsTableLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="yes"
				android:paddingLeft="@dimen/padding_xl">
			</TableLayout>

			<TextView
				android:id="@+id/carDescTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/medium_font_size"
				android:textColor="@color/black"
				android:textStyle="bold"
				android:paddingTop="@dimen/padding_small"
				android:paddingBottom="@dimen/padding_small"
				android:paddingLeft="@dimen/padding_large"
				android:text="@string/car_description_text_view" />

			<TextView
				android:id="@+id/carDescriptionTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="19"
				android:paddingBottom="@dimen/padding_small"
				android:paddingLeft="@dimen/padding_large"
				android:text="BLA BLA BLA" />

		</LinearLayout>
	</ScrollView>


</LinearLayout>
</RelativeLayout>
